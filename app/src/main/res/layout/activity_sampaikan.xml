<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".profil"
    android:background="@drawable/profil2">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saran"
        android:textColor="#ffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sungai Apit, Siak, Riau"
        android:textColor="#ffff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Saran"
        android:paddingTop="100dp"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohon Isi Form ini Dengan Jelas!"
        android:paddingBottom="20dp"
        android:textColor="#92000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#4CAF50"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Anda"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail:"
        android:textSize="17dp"
        android:textStyle="bold"

        android:textColor="#4CAF50"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alamat E-Mail Anda"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saran :"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#4CAF50"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Saran Anda"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:paddingBottom="20dp"
        android:textSize="16dp"/>

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sampaikan Saran Anda"
        android:backgroundTint="#4CAF50"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terimakasih Sudah Memberi Saran" android:paddingBottom="20dp"
        android:textColor="#92000000"
        android:layout_gravity="center"/>


</LinearLayout>