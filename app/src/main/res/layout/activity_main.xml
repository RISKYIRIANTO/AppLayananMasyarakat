<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity"
    android:background="@drawable/frame_81">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="2dp"
        android:text="Halo, Risky Irianto"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang Dilayanan Masyarakat Sungai Apit!"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="55dp"
        android:paddingBottom="2dp"
        android:text="Informasi Layanan"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Profil"
            android:textColor="#ffff"
        android:backgroundTint="#4CAF50"
        android:onClick="pindahkeprofil"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Laporan Masyarakat"
        android:backgroundTint="#4CAF50"
            android:textColor="#ffff"
        android:onClick="pindahkemasyarakat"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Laporan bencana alam"
        android:backgroundTint="#4CAF50"
            android:textColor="#ffff"
        android:onClick="pindahkebencana"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Riwayat laporan"
        android:backgroundTint="#4CAF50"
            android:textColor="#ffff"
        android:onClick="pindahkeriwayat"/>
        <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="sampaikan saran"
        android:backgroundTint="#4CAF50"
            android:textColor="#ffff"
        android:onClick="saran"/>

</LinearLayout>